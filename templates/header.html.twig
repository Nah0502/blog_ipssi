<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="{{ path('homepage') }}">Accueil</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('app_categorie_new') }}">Creer un categorie</a></li>
                    <li><a href="{{ path('app_article_new') }}">Creer un article</a></li>
                    <li><a href="{{ path('app_commentaire_index') }}">Liste des commentaire</a></li>
                {% endif %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('app_logout') }}">Deconnexion</a></li>
                {% else %}
                    <li><a href="{{ path('app_register') }}">Creer un compte</a></li>
                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                {% endif %}
                <li><a href="{{ path('app_article_index') }}">articles</a></li>
                <li><a href="{{ path('app_categorie_index') }}">categories</a></li>
            </ul>
        </nav>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </header>